{
  "version": "1.0",
  "defaultProfileId": "narrativa_contemporanea",
  "profiles": [
    {
      "id": "narrativa_contemporanea",
      "label": "Narrativa contemporanea",
      "notes": "Profilo unico Fermento. Contiene tutte le regole grafiche vincolanti e l'assetto tipografico di riferimento.",
      "rules": {
        "dialogue": {
          "preferredStyle": "curly_quotes",
          "allowDialogueInlineInParagraph": true,
          "convertDialogueMarkers": false,
          "forbidGuillemetsAsDialogue": true
        },
        "quotes": {
          "preferredOuterQuotes": "curly",
          "guillemets": { "open": "«", "close": "»" },
          "curlyQuotes": { "open": "“", "close": "”" },
          "straightQuotes": { "open": "\"", "close": "\"" },
          "convertQuotes": false,
          "forbidGuillemets": true
        },
        "typography": {
          "preserveItalics": true,
          "preserveBold": true,
          "forbidAddingBold": true,
          "forbidAddingItalics": true
        },
        "punctuation": {
          "ellipsis": {
            "keepAsOriginal": true,
            "allowSingleGlyphIfAlreadyPresent": true,
            "singleGlyph": "…",
            "tripleDots": "..."
          },
          "dashes": {
            "keepHyphenMinus": true,
            "keepEnDash": true,
            "keepEmDash": true,
            "convertDashes": false
          },
          "apostrophesAndAccents": {
            "keepAsOriginal": true,
            "forbidSmartApostrophe": false,
            "smartApostrophe": "’",
            "asciiApostrophe": "'"
          }
        },
        "spacingAndLayout": {
          "preserveLineBreaks": true,
          "preserveBlankLines": true,
          "preserveLeadingSpaces": true,
          "forceLineBreakAfterDialogue": false,
          "forbidAutoReflow": true
        },
        "hardConstraintsText": [
          "Il profilo grafico è vincolante.",
          "Mantieni i segni grafici già presenti (dialoghi, virgolette, trattini, puntini). Non convertirli.",
          "Intervieni sulla punteggiatura solo per errori evidenti, senza cambiare lo stile tipografico."
        ]
      }
    }
  ]
}
