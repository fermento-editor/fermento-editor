            "keepEmDash": true
          },
          "apostrophesAndAccents": {
            "keepAsOriginal": true,
            "forbidSmartApostrophe": false,
            "smartApostrophe": "’",
            "asciiApostrophe": "'"
          }
        },
        "spacingAndLayout": {
          "preserveLineBreaks": true,
