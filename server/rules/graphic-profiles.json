{
  "version": "1.0",
  "defaultProfileId": "narrativa_contemporanea",
  "profiles": [
    {
      "id": "narrativa_italiana_classica",
      "label": "Narrativa italiana classica",
      "notes": "Profilo conservativo. Coerenza grafica rigida, niente normalizzazioni automatiche non richieste.",
      "rules": {
        "dialogue": {
          "preferredStyle": "em_dash",
          "emDashChar": "—",
          "oneUtterancePerParagraph": true,
          "convertDialogueMarkers": false,
          "forbidGuillemetsAsDialogue": true
        },
        "quotes": {
          "preferredOuterQuotes": "guillemets",
          "guillemets": { "open": "«", "close": "»" },
          "curlyQuotes": { "open": "“", "close": "”" },
          "straightQuotes": { "open": "\"", "close": "\"" },
          "convertQuotes": false,
          "useGuillemetsOnlyForCitations": true
        },
        "typography": {
          "preserveItalics": true,
          "preserveBold": true,
          "forbidAddingBold": true,
          "forbidAddingItalics": true
        },
        "punctuation": {
          "ellipsis": {
            "keepAsOriginal": true,
            "forbidNormalizationToSingleGlyph": true,
            "singleGlyph": "…",
            "tripleDots": "..."
          },
          "dashes": {
            "keepHyphenMinus": true,
            "forbidHyphenToEnDash": true,
            "forbidHyphenToEmDash": false
          },
          "apostrophesAndAccents": {
            "keepAsOriginal": true,
            "forbidSmartApostrophe": true,
            "smartApostrophe": "’",
            "asciiApostrophe": "'"
          }
        },
        "spacingAndLayout": {
          "preserveLineBreaks": true,
          "preserveBlankLines": true,
          "preserveLeadingSpaces": true,
          "forceLineBreakAfterDialogue": true,
          "forbidAutoReflow": true
        },
        "hardConstraintsText": [
          "Il profilo grafico è vincolante.",
          "È vietato introdurre, sostituire o normalizzare segni tipografici (dialoghi, virgolette, puntini di sospensione, apostrofi) se non espressamente previsto.",
          "Correggi refusi e punteggiatura SOLO quando l'errore è evidente, senza cambiare convenzioni grafiche."
        ]
      }
    },
    {
      "id": "narrativa_contemporanea",
      "label": "Narrativa contemporanea",
